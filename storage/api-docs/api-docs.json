        "/api/attach/{car}/{user}": {
            "post": {
                "tags": [
                    "Rent car"
                ],
                "summary": "Attach car to user if both are available",
                "operationId": "attachCar",
                "parameters": [
                    {
                        "name": "car",
                        "in": "path",
                        "description": "ID of car",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    },
                    {
                        "name": "user",
                        "in": "path",
                        "description": "ID of user",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Car attached to user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiResponse"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Car or User is not available"
                    }
                },
                "security": [
                    {
                        "api_key": []
                    }
                ]
            }
        },
        "/api/detach/{car}": {
            "post": {
                "tags": [
                    "Rent car"
                ],
                "summary": "Detach the given car from any user",
                "operationId": "detachCar",
                "parameters": [
                    {
                        "name": "car",
                        "in": "path",
                        "description": "ID of car",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "204": {
