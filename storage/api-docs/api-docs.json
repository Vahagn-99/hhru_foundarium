        "/api/available-cars": {
            "get": {
                "tags": [
                    "Rent car"
                ],
                "summary": "Get all available cars in this time",
                "operationId": "availableCars",
                "responses": {
                    "200": {
                        "description": "The available cars",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiResponse"
                                }
                            }
                        }
